<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lutai.electric">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FlashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CommonParamsActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".BannerViewerActivity"/>
        <activity android:name=".DeviceInformationActivity"/>
        <activity android:name=".AlarmRecordActivity"/>
        <activity android:name=".ChildDeviceActivity"/>
    </application>

</manifest>