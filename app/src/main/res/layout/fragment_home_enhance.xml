<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.lutai.electric.fragment.HomeFragment">

    <com.lutai.electric.commonView.TopView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/top_common_color">
    </com.lutai.electric.commonView.TopView>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/prs_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="both">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context="com.lutai.electric.fragment.HomeFragment">

            <com.lutai.electric.commonView.bannerView.BannerView
                android:id="@+id/banner_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"/>

            <com.lutai.electric.commonView.NoScrollListView
                android:id="@+id/rv_alarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>